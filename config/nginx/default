server {
	listen 80 default_server;
	#listen 443;

	server_name _;
	server_tokens off;

	root /var/html/www;
	include nette.conf;

	add_header X-Frame-Options SAMEORIGIN;
}

server {
	listen 443;

	server_name _; #ssl_hostname#
	server_tokens off;

	root /var/html/www;
	include nette.conf;

	add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
	add_header X-Frame-Options SAMEORIGIN;

	ssl                  on;
	ssl_certificate      /data/web_ssl.crt;
	ssl_certificate_key  /data/web_ssl.rsa;
}
